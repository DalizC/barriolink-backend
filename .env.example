# ===================================
# ARCHIVO PLANTILLA - NO USAR DIRECTAMENTE
# ===================================
# Copia este archivo según tu ambiente:
# - Para desarrollo local: cp .env.example .env.development
# - Para testing: cp .env.example .env.testing  
# - Para producción: cp .env.example .env.production

# ===================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===================================
DB_HOST=tu_host_aqui
DB_NAME=tu_base_datos_aqui
DB_USER=tu_usuario_aqui
DB_PASSWORD=tu_password_aqui
DB_PORT=5432
DB_SSLMODE=require

# ===================================
# CONFIGURACIÓN DE DJANGO
# ===================================
DEBUG=True
SECRET_KEY=generar_nueva_secret_key_aqui

# ===================================
# CONFIGURACIÓN DE AMBIENTE
# ===================================
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# ===================================
# CONFIGURACIÓN DE EMAIL (CERTIFICADOS)
# ===================================
# TODO: Configurar para producción con un servidor SMTP real
# Por defecto usa console.EmailBackend que solo imprime en consola
# Para Gmail/Outlook/SendGrid, configurar:
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu_email@gmail.com
EMAIL_HOST_PASSWORD=tu_app_password
DEFAULT_FROM_EMAIL=noreply@barriolink.com
