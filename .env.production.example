# ===================================
# CONFIGURACIÓN PARA AZURE APP SERVICE
# ===================================
# Este archivo debe copiarse como .env.production en Azure

# ===================================
# CONFIGURACIÓN DE AMBIENTE
# ===================================
ENVIRONMENT=production
DEBUG=False
ALLOWED_HOSTS=tu-app-name.azurewebsites.net,tudominio.com

# ===================================
# BASE DE DATOS AZURE POSTGRESQL
# ===================================
DB_HOST=pg-barriolink01-dev.postgres.database.azure.com
DB_NAME=barriolink-prod
DB_USER=barriolink_app_user
DB_PASSWORD=tu_password_seguro_aqui
DB_PORT=5432
DB_SSLMODE=require

# ===================================
# SEGURIDAD
# ===================================
SECRET_KEY=generar_nueva_clave_super_segura_para_produccion
CSRF_TRUSTED_ORIGINS=https://tu-app-name.azurewebsites.net,https://tudominio.com

# ===================================
# CORS PARA ANGULAR FRONTEND
# ===================================
CORS_ALLOWED_ORIGINS=https://tu-frontend.com,https://localhost:4200

# ===================================
# ARCHIVOS ESTÁTICOS Y MEDIA
# ===================================
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/home/site/wwwroot/staticfiles
MEDIA_ROOT=/home/site/wwwroot/media

# ===================================
# LOGGING
# ===================================
LOG_LEVEL=INFO