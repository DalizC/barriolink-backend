# ===================================
# CONFIGURACIÓN DE PRODUCCIÓN - BARRIOLINK  
# ===================================

# ===================================
# CONFIGURACIÓN DE BASE DE DATOS AZURE
# ===================================
DB_HOST=pg-barriolink01-prod.postgres.database.azure.com
DB_NAME=barriolink-prod
DB_USER=barriolink_app
DB_PASSWORD=<CHANGE_ME_PRODUCTION_PASSWORD>
DB_PORT=5432
DB_SSLMODE=require

# ===================================
# CONFIGURACIÓN DE DJANGO PRODUCCIÓN
# ===================================
DEBUG=False
SECRET_KEY=<CHANGE_ME_LONG_RANDOM_SECRET_KEY>
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ===================================
# CONFIGURACIÓN DE SEGURIDAD
# ===================================
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ===================================
# CONFIGURACIÓN DE ARCHIVOS ESTÁTICOS
# ===================================
STATIC_URL=/static/
STATIC_ROOT=/var/www/barriolink/static/

# ===================================
# CONFIGURACIÓN DE LOGGING
# ===================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/barriolink/app.log